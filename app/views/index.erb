<!DOCTYPE html>
<html>
<header>
</header>
<body>
  <% @recipes.each do |recipe| %>
  <ul>
    <li>
      <%= recipe.name %>
    </li>
    <li>
      <%= recipe.ingredients %>
    </li>
    <li>
      <%= recipe.cook_time %>
